---
pageable: true
per_page: 10
---
<div>
<ul class="block-list">
<% page_articles.each_with_index do |article, i| %>
  <li>
    <h2 class="no-bottom-margin">
    <% if article.data.link  %>
      <%= link_to article.title,  article.data.link %>
      <i class="icon-external-link"></i>
    <% else %>
      <%= link_to article.title, article %>
    <% end %>
    </h2>
    <p class="no-bottom-margin"><%= article.date.strftime('%e %B %Y') %></p></li>
    <p><%= article.summary %></p>
<% end %>
</ul>

<% if paginate %>
  <div class="gw">
    <div class="g one-third portable-one-whole">
    <% if prev_page %>
      <p class="pagination-link"><%= link_to 'Previous page', prev_page %></p>
    <% else %>
      <p class="pagination-link muted">Previous Page</p>
    <% end %>
    </div>
    <div class="g one-third portable-one-whole">
      <p class="pagination-link text-center">Page <%= page_number %> of <%= num_pages %></p>
    </div>
    <div class="g one-third portable-one-whole">
    <% if next_page %>
      <p class="pagination-link proceed"><%= link_to 'Next page', next_page %></p>
    <% else %>
      <p class="pagination-link proceed muted">Next Page</p>
    <% end %>
    </div>
  </div>
<% end %>
</div>
